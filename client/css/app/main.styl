@import '../_variables'
@import '../_mixins'
@import './nav'
@import './responsive'

// Fallback if view port measures dont work
@import './fallback'

body
  color: white
  font-family: 'Lato', sans-serif

.header
  font-family: 'Yanone Kaffeesatz', sans-serif
  font-weight: 700

.container
  position: relative

.container > div
  position: absolute
  width: 100%

.shade
  text-shadow: 0px 0px 6px #000000

.hidez
  opacity(0.00)

a, a:hover
  color: white

.center
  text-align: center
  float: none
  margin: 0 auto
  display: inline-block

#main-container
  padding-top: 56px

.section
  height: 100vh
  -webkit-background-size: contain
  -moz-background-size: contain
  -o-background-size: contain
  background-size: contain

#intro-text > div > p
  padding-top: 14vh

#about
  background-image: url('static/foto.jpg')
  background-size: 100% 0% !important
  background-repeat: no-repeat
  opacity(0.8)
  font-size: 32px

#resume
  background-color: #d3a494

#skills
  background-color: #FDF3E7

#contacts
  background-color: #558C89

.lob
  font-family: 'Lato', sans-serif
  font-weight: 700
